{
  "$id": "renpyJson",
  "type": "object",
  "required": [
    "images",
    "sounds",
    "fonts",
    "characters",
    "nodes",
    "style",
    "lang",
    "game_name"
  ],
  "properties": {
    "images": {
      "type": "object",
      "patternProperties": {
        ".*": { "type": "string" }
      }
    },
    "sounds": {
      "type": "object",
      "patternProperties": {
        ".*": { "type": "string" }
      }
    },
    "fonts": { "$ref": "fonts" },
    "characters": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "required": ["color", "name"],
          "properties": {
            "color": {
              "anyOf": [
                { "type": "string" },
                { "type": "null" }
              ]
            },
            "name": { "type": "string" }
          },
          "additionalProperties": false
        }
      }
    },
    "nodes": { "$ref": "nodes" },
    "style": { "$ref": "style" },
    "lang": { "type": "string" },
    "game_name": { "type": "string" }
  },
  "additionalProperties": false
}
