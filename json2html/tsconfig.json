{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "alwaysStrict": true
    },
    "include": [
        "./**/*",
        "../generated-json/**/*"
    ]
}
